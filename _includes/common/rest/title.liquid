{%- case page.url -%}
    {%- when "/" -%}
        {%- assign title = site.title
            | append: " 路 "
            | append: site.description | truncate: 110 -%}
    {%- when "/search.html" -%}
        {%- assign title = __.search | default: "Search"
            | append: " 路 "
            | append: site.title | truncate: 110 -%}
    {%- when "/404.html" -%}
        {%- assign title = "404"
            | append: " 路 "
            | append: site.title | truncate: 110 -%}
    {%- else -%}
        {%- assign title = page.title | default: page.name
            | append: " 路 "
            | append: site.title | truncate: 110 -%}
{%- endcase -%}
