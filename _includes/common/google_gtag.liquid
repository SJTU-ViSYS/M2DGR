{%- if site.google.gtag -%}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.google.gtag }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "{{ site.google.gtag }}");
    </script>
{%- endif -%}
